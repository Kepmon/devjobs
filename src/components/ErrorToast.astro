---
import { twMerge } from 'tailwind-merge'

interface Props {
  showingClass: string
}

const { showingClass } = Astro.props
---

<div class={twMerge('error-toast', showingClass)}>
  <p class="font-[600]">Ooops, something went wrong.</p>
  <p class="text-xs">Try again later.</p>
</div>

<style>
  .error-toast {
    @apply fixed top-1/3 left-1/2 p-6 min-w-max bg-red-400 font-[500] rounded-md z-20;
    @apply -translate-x-1/2 -translate-y-[1000px] transition-transform duration-1000;
  }
</style>
