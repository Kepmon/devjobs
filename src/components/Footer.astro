---
import type { Job } from '../types/jobs'
import CustomButton from './CustomButton.astro'

interface Props {
  company: Job['company']
  position: Job['position']
}

const { company, position } = Astro.props
---

<footer>
  <div class="job-details-wrapper flex xs:justify-between">
    <div class="hidden xs:grid gap-3">
      <p class="text-md font-[800]">{position}</p>
      <p class="text-gray-500">{company}</p>
    </div>
    <CustomButton moreClasses="grow xs:self-center xs:grow-0">
      Apply Now
    </CustomButton>
  </div>
</footer>

<style>
  footer {
    @apply sticky bottom-0 shadow-fotter-light dark:shadow-fotter-dark;
    @apply self-end mt-20 p-6 bg-white dark:bg-gray-800 dark:text-white;
  }
</style>
