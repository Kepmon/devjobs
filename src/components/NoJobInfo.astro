---
import ErrorMagnifyingGlass from './svgs/ErrorMagnifyingGlass.astro'

interface Props {
  isDisplayed: string
}

const { isDisplayed } = Astro.props
---

<div data-displayed={isDisplayed} class="error-container">
  <ErrorMagnifyingGlass />
  <h2 class="text-xl font-bold">No job offers found</h2>
  <p>
    <span>Try searching by a different query or go back to the&nbsp;</span>
    <a href="/">home page</a>
  </p>
</div>

<style>
  [data-displayed='false'] {
    @apply hidden;
  }

  [data-displayed='true'] {
    @apply block;
  }
</style>
